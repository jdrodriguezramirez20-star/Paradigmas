<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="co.edu.poli.actividad3.vista.ActividadController" 
            prefHeight="650.0" prefWidth="1100.0">
    
    <!-- Título Superior -->
    <top>
        <VBox style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Label text="Sistema de Gestión de Actividades Turísticas" 
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="CRUD - Serialización y Deserialización" 
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;"/>
        </VBox>
    </top>
    
    <!-- Tabla Central -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <Label text="Lista de Actividades Turísticas" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            
            <TableView fx:id="tablaActividades" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="250"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                    <TableColumn fx:id="colTiempo" text="Tiempo (hrs)" prefWidth="100"/>
                    <TableColumn fx:id="colAnio" text="Año Creación" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <!-- Formulario Derecho -->
    <right>
        <VBox spacing="12" prefWidth="380" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <Label text="Formulario de Actividad" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <Separator/>
            
            <!-- ID -->
            <VBox spacing="5">
                <Label text="ID:"/>
                <TextField fx:id="txtId" promptText="Identificador único"/>
            </VBox>
            
            <!-- Nombre -->
            <VBox spacing="5">
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre" promptText="Nombre de la actividad"/>
            </VBox>
            
            <!-- Tipo -->
            <VBox spacing="5">
                <Label text="Tipo:"/>
                <ComboBox fx:id="cbTipo" promptText="Seleccione tipo" prefWidth="350"/>
            </VBox>
            
            <!-- Tiempo -->
            <VBox spacing="5">
                <Label text="Tiempo (horas):"/>
                <TextField fx:id="txtTiempo" promptText="Duración en horas"/>
            </VBox>
            
            <!-- Año de Creación -->
            <VBox spacing="5">
                <Label text="Año de Creación:"/>
                <TextField fx:id="txtAnio" promptText="Ej: 2024"/>
            </VBox>
            
            <!-- Lugar -->
            <VBox spacing="5">
                <Label text="Lugar:"/>
                <TextField fx:id="txtLugarNombre" promptText="Nombre del lugar"/>
            </VBox>
            
            <!-- Atributo Específico (dinámico) -->
            <VBox spacing="5">
                <Label fx:id="lblAtributoEspecifico" text="Atributo Específico:"/>
                <TextField fx:id="txtAtributoEspecifico" promptText="Según el tipo"/>
            </VBox>
            
            <Separator/>
            
            <!-- Botones CRUD -->
            <VBox spacing="10">
                <Button fx:id="btnCrear" text="Crear Actividad" onAction="#onCreateClicked"
                        prefWidth="350" prefHeight="35"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <Button fx:id="btnActualizar" text="Actualizar Actividad" onAction="#onUpdateClicked"
                        prefWidth="350" prefHeight="35"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <Button fx:id="btnEliminar" text="Eliminar Actividad" onAction="#onDeleteClicked"
                        prefWidth="350" prefHeight="35"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <Button fx:id="btnCargar" text="Cargar desde Archivo" onAction="#onLoadClicked"
                        prefWidth="350" prefHeight="35"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>
            
        </VBox>
    </right>
    
</BorderPane>